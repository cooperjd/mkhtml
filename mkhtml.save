#! /bin/sh

templateLoc=/var/lib/mkhtml/templates
fileExt=.html

#Check if mkhtml is installed
if [ -f "/var/lib/mkhtml" ]; then
	echo "var location found"
fi
if [ -f "$templateLoc" ]; then
	echo "template location found"
fi

#Check for addtemplate
if [ "$1" == "addtemplate"]; then
        if [ -f "$2" ]; then
                cp $2 templateLoc
	else
		echo "file $2 does not exist"
	fi
fi

#Check for file creation
template=$templateLoc/$1
file=$2$fileExt

if [ -f "$template" ]; then
	echo "$file exists"
	touch $file
	cat $template > $file
else
	echo "Template '$1' does not exist in location '$templateLoc'"
fi

exit 0
